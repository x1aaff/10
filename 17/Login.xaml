<Page x:Class="_17.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_17"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="Black">
        <TextBox x:Name="TBLogin" HorizontalAlignment="Left" Margin="155,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159" Height="30" FontSize="18"/>
        <TextBox x:Name="TBPassword" HorizontalAlignment="Left" Margin="155,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159" Height="30" FontSize="18"/>
        <Button x:Name="BtnAuthorize" Content="Авторизация" HorizontalAlignment="Left" Margin="155,260,0,0" VerticalAlignment="Top" Height="34" Width="159" FontSize="18" FontFamily="Showcard Gothic" Click="BtnAuthorize_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="155,83,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Foreground="White" FontSize="18" FontFamily="Castellar"/>
        <TextBlock HorizontalAlignment="Left" Margin="155,160,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Foreground="White" FontSize="18" FontFamily="Castellar"/>

    </Grid>
</Page>
